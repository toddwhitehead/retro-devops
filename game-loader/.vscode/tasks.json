{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build -> C64 -> VICE",
            "type": "shell",
            "windows": {
                "command": "acme -f cbm -l build/labels -o build/gameloader.prg index.asm && C:/projects/c64/vice/x64.exe -moncommands build/labels build/gameloader.prg"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": {
                "owner": "acme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(Error - File\\s+(.*), line (\\d+) (\\(Zone .*\\))?:\\s+(.*))$",
                    "file": 2,
                    "location": 3,
                    "message": 1
                }
            }
        },
        {
            "label": "build -> C64 -> Pucrunch -> VICE",
            "type": "shell",
            "windows": {
                "command": "acme -f cbm -l build/labels -o build/gameloader.prg index.asm && bin\\pucrunch build/gameloader.prg build/gameloader.prg && C:/projects/c64/vice/x64.exe -moncommands build/labels build/gameloader.prg",
            },
            "group": "build",
            "presentation": {
                "clear": true
            },
            "problemMatcher": {
                "owner": "acme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(Error - File\\s+(.*), line (\\d+) (\\(Zone .*\\))?:\\s+(.*))$",
                    "file": 2,
                    "location": 3,
                    "message": 1
                }
            }
        }
    ]
}